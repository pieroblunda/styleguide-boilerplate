*
  margin 0
  padding 0
  box-sizing border-box
  outline none

html,
body
  background-color $white
  font-size 14px
  font-weight 300
  color $black
  font-family 'Open Sans', sans-serif

button
  -moz-appearance none
  -webkit-appearance none
  appearance none
  border none
  background-color transparent
  cursor pointer

ul
  list-style none

a
  text-decoration none
  &:hover
    text-decoration underline

h1
h2
h3
  font-family 'Montserrat', sans-serif

h1
  margin-bottom 1rem
  font-size 30px
h2
  margin-bottom 1rem * 0.75
  font-size 22px
h3
  margin-bottom 1rem * 0.50
  font-size 18px
p
  margin-bottom 1rem * 0.25
  &:last-child
    margin-bottom 0

table
  width 100%
  caption
  td
  th
    text-align left

main
  display flex
  flex-direction row
  aside
    background-color $blue
    min-width 250px
    top 0
    width 250px
    position sticky
    height 100vh
    overflow-y auto
    ul.menu
      li
        a
          color $white
          font-weight bold
          font-size 15px
          text-decoration none
          padding $standard-spacing 30px
          display block
          &:hover
            background-color $blue-hover

  article
    width 75%
    margin 30px auto
    section
      margin-bottom 60px

.clipboard
  cursor pointer

.tab-component
  .tabs-wrapper
    display flex
    h3
      display inline-block
      border-bottom 1px solid
      flex 1
      margin 0
      line-height 33px
    button
      background-color $white
      margin-right 0
      border 1px solid
      border-left-width 0
      padding 8px 16px
      &:first-of-type
        border-left-width 1px
      &.active
        border-bottom-color $gray-3
        background-color $gray-3
  .tab-content
    border 1px solid
    border-top 0
    display none
    position relative
    &.active
      display block
    .clipboard
      bottom 10px
      position absolute
      width 30px
      height 30px
      background-size 70%
      background-color $white
      right 10px
      margin 0
      background-repeat no-repeat
      background-position center
      background-image url('data:image/png;base64,')
      .tooltip
        position absolute
        top -25px
        right 0
        background-color #333
        padding 4px 8px
        color $white
        font-size 90%
        display none
        &.visible
          display block
    code
      padding 25px


.colors-component
  flex 1 1 auto
  border 1px solid $gray-1
  max-width 200px
  &:last-child
    margin-right 0
  .color-area
    height 80px
    margin-bottom 15px
    &.bg-color1
      background-color #845EC2
    &.bg-color2
      background-color #2C73D2
    &.bg-color3
      background-color #0081CF
    &.bg-color4
      background-color #0089BA
    &.bg-color5
      background-color #008E9B
    &.bg-color6
      background-color #008F7A
  h4
    font-size 14px
    font-weight bold
  .data-area
    padding 0 15px
    margin-bottom 15px
    table
      caption
        color $gray-4
        font-size 14px
        font-weight bold
        margin-bottom 5px
      tr
        th
          font-size 10px
          color $gray-1
        td
          color $gray-2
          font-size 12px

.icons-component
  svg
    font-size 50px
    margin 0 15px
